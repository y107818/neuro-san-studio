{
    "llm_config": {
        "model_name": "bedrock-us-claude-sonnet-4",
    },

    # Optional metadata describing this agent network
    "metadata": {
        "description": "Agent network that delegates to a Google Agentspace agent to interact with different data store connectors on Google Cloud and answer questions about configured data sources.",
        "tags": ["google", "agentspace", "tool"],
        "sample_queries": [
            "What is the percent representation of each state in the customer profile data?",
            "Search for information about product sales in Q3",
            "Query the customer database for recent transactions",
        ]
    },

    "tools": [
        # This first agent definition is regarded as the "Front Man", which
        # does all the talking to the outside world/client.
        #
        # Some disqualifications from being a front man:
        #   1) Cannot use a CodedTool "class" definition
        #   2) Cannot use a Tool "toolbox" definition
        #
        # Besides the first agent being the front man, these tool definitions
        # do not have to be in any particular order. How they are linked and
        # call each other is defined within their own specs.
        # This could be a graph, potentially even with cycles.
        {
            "name": "AgentSpace_searcher",

            "function": {
                "description": "Assist caller with searching a query."
                "parameters": {
                    "type": "object",
                    "properties": {
                        "search_query": {
                            "type": "string",
                            "description": """
    An inquiry from a user.
    """
                        },
                    },
                    "required": ["search_query"]
                }
            },

            "instructions": """
Use your tool to respond to the inquiry.
""",
            "tools": ["agentspace_adapter"]
        },
        {
            "name": "agentspace_adapter",
            "function": {
                "description": """
Query an Agentspace agent to assist and answer the search query.
```
                """,
                "parameters": {
                    "type": "object",
                    "properties": {
                        "search_query": {
                            "type": "string",
                            "description": "Search query string to pass to Agentspace agent."
                        },
                    },
                    "required": ["search_query"]
                }
            },
            "class": "agentspace_adapter.AgentSpaceSearch",
        },
    ]
}
